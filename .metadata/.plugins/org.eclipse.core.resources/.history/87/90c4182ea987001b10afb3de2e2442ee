package kr.or.ddit.basic;

import java.io.File;

public class T01_FileTest {
	public static void main(String[] args) {
		/**
		 * 파일 객체 만들기 연습
		 * 1. new File(String 파일 또는 경로)
		 * => 디렉토리와 디렉토리 사이 또는 디렉토리와 파일명 사이의 구분문자는
		 * 	  '\'를 사용하거나 '/'를 사용할 수 있다.
		 */
		//File file = new File("d:/D_other/test.txt");
		File file = new File("d:\\D_other\\test.txt");
		System.out.println("파일명" + file.getName());
		System.out.println("파일 여부" + file.isFile());
		System.out.println("디렉토리(폴더) 여부  : " + file.isDirectory());
		System.out.println("-----------------------------");
		
		File file2 = new File("d:/D_other");
//		File file2 = new File("d:/D_other/test.txt");
		System.out.println(file2.getName() + "은");
		if(file2.isFile()) {
			System.out.println("파일");
		} else if(file2.isDirectory()) {
			System.out.println("디렉토리(폴더)");
		}
		System.out.println("-----------------------------------");
	}
}
